{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**/*.html",
        "destination": "/$1",
        "type": 301
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
